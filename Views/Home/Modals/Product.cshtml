@model EasyProduct.Models.GroupModel

<!-- Products Modal -->
<div>
    @if (Model != null && Model.Products.Any())
    {
        @foreach (var product in Model.Products)
        {
            <div class="modal fade" id="productModal_@product.Id" tabindex="-1" aria-labelledby="productModalLabel_@product.Id"
                aria-hidden="true">
                <div class="modal-dialog modal-lg">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="productModalLabel_@product.Id">@product.Name</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body">
                            <div class="row">
                                <div class="mb-3 col-lg-5">
                                    <img src="@product.ImageURL" alt="" class="img-thumbnail img-fluid pic">
                                </div>
                                <div class="mb-3 col">
                                    <p>@product.Description</p>
                                </div>
                            </div>
                            <form asp-controller="Home" asp-action="AddToCart" method="post">
                                <input type="hidden" name="model.ProductId" value="@product.Id" />
                                <div class="m-3">
                                    <p>Ingredients:</p>
                                    @{
                                        var ingredientsList = product.Ingredients.Split(',');
                                        for (int i = 0; i < ingredientsList.Length; i++)
                                        {
                                            <div class="form-check form-check-inline">
                                                <input class="form-check-input" type="checkbox" id="ingredient_@i"
                                                    name="model.SelectedIngredients" value="@ingredientsList[i].Trim()" checked>
                                                <label class="form-check-label" for="ingredient_@i">@ingredientsList[i].Trim()</label>
                                            </div>
                                        }
                                    }
                                    <div class="mt-3">
                                        <p>Additional Products:</p>
                                        @if(product.Type == 1)
                                        {
                                            @foreach (var additionalProduct in Model.Products.Where(p => p.Type == 6))
                                            {
                                                <div class="form-check form-check-inline">
                                                    <input class="form-check-input additional-product-checkbox" type="checkbox"
                                                        id="additionalProduct_@additionalProduct.Id"
                                                        name="model.SelectedAdditionalProductsId" value="@additionalProduct.Id"
                                                        data-price="@additionalProduct.Price">
                                                    <label class="form-check-label"
                                                        for="additionalProduct_@additionalProduct.Id">@additionalProduct.Name</label>
                                                </div>
                                            }
                                        }

                                        else if(product.Type == 3)
                                        {
                                            @foreach (var additionalProduct in Model.Products.Where(p => p.Type == 8))
                                            {
                                                <div class="form-check form-check-inline">
                                                    <input class="form-check-input additional-product-checkbox" type="checkbox"
                                                        id="additionalProduct_@additionalProduct.Id"
                                                        name="model.SelectedAdditionalProductsId" value="@additionalProduct.Id"
                                                        data-price="@additionalProduct.Price">
                                                    <label class="form-check-label"
                                                        for="additionalProduct_@additionalProduct.Id">@additionalProduct.Name</label>
                                                </div>
                                            }
                                        }

                                        else if(product.Type == 4)
                                        {
                                            @foreach (var additionalProduct in Model.Products.Where(p => p.Type == 7))
                                            {
                                                <div class="form-check form-check-inline">
                                                    <input class="form-check-input additional-product-checkbox" type="checkbox"
                                                        id="additionalProduct_@additionalProduct.Id"
                                                        name="model.SelectedAdditionalProductsId" value="@additionalProduct.Id"
                                                        data-price="@additionalProduct.Price">
                                                    <label class="form-check-label"
                                                        for="additionalProduct_@additionalProduct.Id">@additionalProduct.Name</label>
                                                </div>
                                            }
                                        }
                                    </div>
                                    <div class="input-group mt-3">
                                        <button class="btn btn-outline-secondary decrease-quantity" type="button"
                                            id="decreaseQuantity"><i class="bi bi-caret-down"></i></button>
                                        <input type="text" class="form-control quantity" id="quantity" name="model.Quantity"
                                            value="1">
                                        <button class="btn btn-outline-secondary increase-quantity" type="button"
                                            id="increaseQuantity"><i class="bi bi-caret-up"></i></button>
                                    </div>
                                </div>
                                <div class="d-flex justify-content-end">

                                    @if (product.DayPromotion == @ViewBag.CurrentDayOfWeek || product.DayPromotion == 8)
                                    {
                                        <h5 class="text-end">Price: $<span class="total-price" data-price-element
                                        data-price="@product.PromotionPrice">@product.PromotionPrice</span></h5>
                                    }

                                    else
                                    {

                                        <h5 class="text-end">Price: $<span class="total-price" data-price-element
                                        data-price="@product.Price">@product.Price</span></h5>
                                    }
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                    <button type="submit" class="btn btn-success">Add to cart</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        }
    }
</div>
